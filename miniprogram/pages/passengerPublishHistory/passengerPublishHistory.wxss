page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
}

.container{
  padding-bottom: 120rpx;
}

.list-view{
  width: 100%;
  padding: 30rpx 0;
}

.item-view{
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 4rpx #ccc;
}

