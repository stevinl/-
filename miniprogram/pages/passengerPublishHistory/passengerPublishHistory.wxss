.item-view .info{
  position: relative;
  display: flex;
  justify-content: space-between;
}

.item-view .info .delete-btn{
  position: absolute;
  right: -30rpx;
  top: -30rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-radius: 50%;
  border: 1px soli #7ed6df;
}

.item-view .info .delete-btn image{
  width: 30rpx;
  height: 30rpx;
}

.item-view .info .item{
  display: flex;
  margin-bottom: 20rpx;
}





.submit-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  height: 100rpx;
  z-index: 999999;
}
.submit-btn .navigator{
  width: 100%;
  color: #ffffff;
  background-color: #0091ff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}