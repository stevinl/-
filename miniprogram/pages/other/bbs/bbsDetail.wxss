/* pages/other/bbs/bbsDetail.wxss */

.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx; /* 取决于footer的高度 */
  padding: 0 0 100rpx 0;
}

.blog {
  padding: 20rpx;
  background-color: #fff;
}

.blog-title {
  display: flex;
}

.blog-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.blog-box {
  flex: 1;
}
.blog-time {
  font-size: 24rpx;
  color: #939393
}
.blog-content {
  margin: 20rpx 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}
.blog-img{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}
.blog-img .img{
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.blog-img .img:nth-child(3n) {
  margin-right: 0;
}

.blog-card {
  margin-bottom: 20rpx;
}

.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
}

.tab-item {
  color: #697480;
}

/* 评论列表 */

.comment-list {
  background-color: #fff;
}

.comment {
  padding: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}


.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin:4rpx 20rpx 0 0;
  float: left;
}

.comment-nickname {
  font-size: 30rpx;
  color:#294059
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
}
.comment-text{
  margin: 5rpx 0  10rpx 84rpx;
}
.comment-time {
  font-size: 24rpx;
  color: #939393;
  margin-left: 84rpx;
}

.blog-ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
.no-comment {
  text-align: center;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}


.ctrl {
  display: flex;
  align-items: center;
  background: #fff;
  height: 100%;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, 0.8);
  font-size: 26rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.ctrl-item .icon {
  font-size: 32rpx;
}

.ctrl-item text {
  /* margin-left: 12rpx;
  font-size: 32rpx; */
  margin-left: 5rpx;
  font-size: 30rpx;
  line-height: 27px;
  height: 100%;
}

.comment-content {
  width: 560rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.send {
  background: #d43c33;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  width: 100%;
  height: 100%;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}